<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "main" %>
</head>
<body>
  <div class='centered'>
    <header>
      <h2><strong>Job Tracker</strong></h2>
    </header>
    <div class = 'dash-box'>
      <div class ='inner-text1 font'>
        <h3>Jobs by Interest</h3>
        <% @job_interests.each do |key, value| %>
          <p><%= '*'*key %>(<%= value %> jobs)</p>
        <% end %>
      </div>
    </div>
    <div class = 'dash-box'>
      <div class ='inner-text2 font'>
        <h3>Top Companies by Interest</h3>
        <% @top_companies.each do |company| %>
          <h5><%= company.name %> (<%= company.avg_interest.round(1) %> stars)</h5>
        <% end %>
      </div>
    </div>
    <% @city_jobs.each do |city, job_count| %>
      <p class='font'><%= link_to "#{city} jobs", "/jobs?location=#{city}" %> (<%= job_count %>)</p>
    <% end %>
  </div>
</body>
</html>
