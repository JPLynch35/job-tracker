<%= form_for [@company, @job], html: {class: "job-form"} do |f| %>
  <p>
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.order(:title),:id,:title, include_blank: true %>
    <%= link_to "Add New Category", new_category_path %>
  </p>

  <p>
    <%= f.label :Role %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :company_id %>
    <%= f.collection_select :company_id, Company.order(:name),:id,:name, include_blank: true %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :Interest %>
    <%= f.select :level_of_interest, [5, 4, 3, 2, 1], include_blank: true %>
  </p>

  <%= link_to 'Cancel', jobs_path, :class => 'button' %>
  <%= f.submit 'Submit', :class => 'button' %>

<% end %>
