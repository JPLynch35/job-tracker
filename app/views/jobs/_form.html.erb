<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :company_id %>
  <%= f.collection_select :company_id, Company.order(:name),:id,:name, include_blank: true %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <p><%= f.label :category_id %> <%= link_to "Add New Category", new_category_path %></p>
  <%= f.collection_select :category_id, Category.order(:title),:id,:title, include_blank: true %>

  <%= f.submit %>
<% end %>
